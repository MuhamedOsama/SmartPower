@model IEnumerable<SmartPower.Models.ReportConstant>

@{
    ViewData["Title"] = "Index";
}

<h2>Report Constants</h2>

<p>
    @Html.ActionLink("Define New Contstant", "Create", null, null, new { @class = "btn btn-xs btn-info pull-right" })

</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new { Id = item.Id }, new { @class = "btn btn-xs btn-warning " })
               
                @Html.ActionLink("Delete", "Delete", new { Id = item.Id }, new { @class = "btn btn-xs btn-danger " })
            </td>
        </tr>
}
    </tbody>
</table>
