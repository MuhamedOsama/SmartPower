@model SmartPower.Models.secondarySource

@{
    ViewData["Title"] = "Create";
}

<h2>Create New Connection</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @Html.HiddenFor(m => Model.Id, new { Value = Model.Id});
            @Html.HiddenFor(m => Model.Type, new { Value = Model.Type });

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger">Name</span>
            </div>

            <div class="form-group">
                <label asp-for="DesignValue" class="control-label"></label>
                <input asp-for="DesignValue" class="form-control" />
                <span asp-validation-for="DesignValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxCurrent" class="control-label"></label>
                <input asp-for="MaxCurrent" class="form-control" />
                <span asp-validation-for="MaxCurrent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Type">
                    <option value="OnePhase"> One Phase</option>
                    <option value="ThreePhase"> Three Phase</option>

                </select>
            </div>
            <div class="form-group">
                <select asp-for="Topology">
                    <option value="Star"> Star </option>
                    <option value="Delta"> Delta</option>

                </select>
            </div>
            @Html.HiddenFor(m => m.Fac_Id, new { value = Model.Fac_Id})
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

